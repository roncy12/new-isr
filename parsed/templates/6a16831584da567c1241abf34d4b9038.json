{
  "components/carousel-content": "<div class=\"heroCarousel-content{{#unless show_background}} heroCarousel-content--empty{{/unless}}\">\n    <!-- {{{heading}}} --> \n    <!-- {{{text}}} -->\n    <span class=\"heroCarousel-title\">Experience The <br/> Iconic Treatment</span>\n    <p class=\"heroCarousel-description\">Shop for affordable, eco-friendly, and<br> unbelievably comfortable mattresses.</p>\n    {{#if button_text}}\n        <a href=\"{{url}}\" aria-label=\"{{#if this.alt_text.length '!=' 0}}{{this.alt_text}}{{else}}{{lang 'carousel.slide_number' slide_number=(add @index 1)}}{{/if}}, {{button_text}}\" class=\"heroCarousel-action button button--primary button--large\">{{button_text}}</a>\n    {{/if}}\n</div>\n"
}